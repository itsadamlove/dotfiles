[url "ssh://git@heroku.com/"]
	insteadOf = https://git.heroku.com/
[core]
   excludesfile = ~/.gitignore
   editor = vim
[push]
   default = matching
[alias]
   s = status
   st = stash
   di = diff
   dh = diff HEAD^
   co = commit -m
   ch = checkout
   a = add
   f = flow
   hr = reset HEAD^ --hard
   pt = push --tags
   lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
